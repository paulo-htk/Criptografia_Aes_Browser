{
  "name": "aes-crypto-browser",
  "version": "2.0.0",
  "description": "Sistema modular de criptografia AES para navegador com TypeScript",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "serve": "python -m http.server 8000",
    "serve:node": "npx http-server -p 8000 -c-1",
    "start": "npm run build && npm run serve:node",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "preview": "npm run build && npm run serve"
  },
  "keywords": [
    "aes",
    "cryptography",
    "encryption",
    "browser",
    "typescript",
    "web-crypto-api",
    "modular",
    "reusable"
  ],
  "author": "Desenvolvedor",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "css/**/*",
    "index.html",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not < 2%"
  ],
  "repository": {
    "type": "git",
    "url": "local"
  },
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/CryptoUtils.js",
      "types": "./dist/utils/CryptoUtils.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/AESCrypto.js",
      "types": "./dist/crypto/AESCrypto.d.ts"
    },
    "./ui": {
      "import": "./dist/ui/UIManager.js",
      "types": "./dist/ui/UIManager.d.ts"
    },
    "./managers": {
      "import": "./dist/managers/AESCryptoManager.js",
      "types": "./dist/managers/AESCryptoManager.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  }
}
